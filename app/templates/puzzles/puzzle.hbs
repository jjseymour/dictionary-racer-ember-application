<div class="container">
    <strong style="position:absolute; right:50px;">Clicks: {{count}}</strong>
    <strong style="position:absolute; top:80px; right:50px;">Clicks to beat: {{model.best_path.length}}</strong>
  <h2>Starting Word: {{model.start_word}}</h2>
  {{#each entries as |entry|}}
    {{entry.color}}

    {{!-- {{#if green}}
      green
    {{else if yellow}}
      yellow
    {{else if red}}
      red
    {{/if}} --}}

    <p>
      {{entry.word}}
    </p>

    <p>
      {{#each entry.definition as |word|}}
        <strong {{action "getEntry" word}}>{{word}}</strong>
      {{/each}}
    </p>
  {{/each}}

  {{#ember-wormhole to="winning"}}
    {{winner-modal isVisible=showMyModal count=count goHome="goHome"}}
  {{/ember-wormhole}}

  <h2>Ending Word: {{model.end_word}}</h2>
  <p>{{model.difficulty}}</p>

  {{#if userGiveUp}}
    {{#each model.best_path as |word|}}
      {{word}}
    {{/each}}
  {{/if}}

  <button type="button" name="button" class="btn btn-primary" {{action "setEntry" model}}>Start</button>

</div>
{{outlet}}
